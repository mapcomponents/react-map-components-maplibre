{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"types": ["cypress", "node"],
		"sourceMap": false,
		"rootDir": "../"
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"../src/**/**/*.stories.tsx",
		"../src/**/**/*.stories.jsx",
		"../cypress.config.ts",
		"../**/*.cy.ts",
		"../**/*.cy.tsx",
		"../**/*.cy.js",
		"../**/*.cy.jsx",
		"../**/*.d.ts",
		"../src/**/**.tsx",
		"../src/**/**.jsx"
	]
}
