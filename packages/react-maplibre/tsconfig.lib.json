{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"types": [
			"node",
			"@nx/react/typings/cssmodule.d.ts",
			"@nx/react/typings/image.d.ts",
			"vite/client"
		]
	},
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.spec.tsx",
		"**/*.test.tsx",
		"**/*.spec.js",
		"**/*.test.js",
		"**/*.spec.jsx",
		"**/*.test.jsx",
		"cypress/**/*",
		"cypress.config.ts",
		"**/*.cy.ts",
		"**/*.cy.js",
		"**/*.cy.tsx",
		"**/*.cy.jsx"
	],
	"include": ["src", "src/**/*.json"]
}
